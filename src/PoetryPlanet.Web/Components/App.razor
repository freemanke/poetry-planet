<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="/"/>
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]"/>
    <link rel="stylesheet" href="@Assets["app.css"]"/>
    <link rel="stylesheet" href="@Assets["PoetryPlanet.Web.styles.css"]"/>
    <ImportMap/>
    <link rel="icon" type="image/png" href="favicon.png"/>
    <HeadOutlet @rendermode="PageRenderMode"/>
    <RadzenTheme Theme="default" @rendermode="InteractiveServer" />
    <title>Poetry Planet</title>
</head>

<body>
<Routes @rendermode="PageRenderMode" />
<script src="_framework/blazor.web.js"></script>
<script src="_content/Radzen.Blazor/Radzen.Blazor.js?v=@(typeof(Colors).Assembly.GetName().Version)"></script>
</body>
</html>

@code 
{
    [CascadingParameter] 
    private HttpContext HttpContext { get; set; } = null!;

    private IComponentRenderMode? PageRenderMode => 
        HttpContext.AcceptsInteractiveRouting() ? InteractiveServer : null;
}